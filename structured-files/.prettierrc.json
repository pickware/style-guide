{
    "endOfLine": "lf",
    "printWidth": 120,
    "quoteProps": "as-needed",
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "xmlSelfClosingSpace": true,
    "xmlWhitespaceSensitivity": "ignore",
    "plugins": ["@prettier/plugin-xml"],
    "overrides": [
        {
            "files": ["*.yml", "**.yaml", "**/*.yml", "**/*.yaml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
