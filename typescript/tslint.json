{
    "extends": ["tslint:recommended", "tslint-immutable", "typestrict"],
    "jsRules": {
        "quotemark": false
    },
    "rules": {
        "interface-name": {
            "severity": "error",
            "options": "never-prefix"
        },
        "max-classes-per-file": false,
        // Handled by eslint/prettier:
        "max-line-length": false,
        "no-console": false,
        "no-delete": true,
        // Handled in eslint @typescript-eslint/no-empty-interface:
        "no-empty-interface": false,
        "no-expression-statement": {
            "options": {
                "ignore-prefix": [
                    "console.",
                    "debug(",
                    "describe(",
                    "expect(",
                    "fail(",
                    "it(",
                    "message(",
                    "mutable",
                    "sideEffect",
                    "super(",
                    "this.mutable",
                    "this.sideEffect",
                    "warn(",
                    "yield "
                ]
            }
        },
        "no-let": [true, { "ignore-prefix": "mutable" }],
        "no-method-signature": true,
        "no-object-mutation": {
            "options": { "ignore-prefix": ["mutable", "this.mutable", "process.exitCode"] }
        },
        "no-parameter-reassignment": true,
        "no-var-keyword": true,
        "no-var-requires": true,
        "quotemark": false,
        "readonly-array": [true, { "ignore-prefix": "mutable" }],
        "readonly-keyword": [true, { "ignore-prefix": "mutable" }],
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"]
    }
}
